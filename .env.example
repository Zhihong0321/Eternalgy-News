# ============================================
# Eternalgy-News-AI Configuration
# ============================================

# ============================================
# Search API Configuration (GPT-4o-mini-web-search)
# ============================================
SEARCH_API_URL=https://api.bltcy.ai/v1/chat/completions
SEARCH_API_KEY=your-search-api-key-here
SEARCH_MODEL=gpt-4o-mini-search-preview

# ============================================
# AI Processing Configuration (GPT-5-nano)
# ============================================
AI_API_URL=https://api.bltcy.ai/v1/
AI_API_KEY=your-ai-api-key-here
AI_MODEL=gpt-5-nano-2025-08-07

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5433
DB_NAME=news_db
DB_USER=postgres
DB_PASSWORD=postgres
# Or supply a single connection URL (preferred on Railway):
# DATABASE_URL=postgresql://user:pass@host:port/dbname?sslmode=require
# DB_SSLMODE=require

# ============================================
# Processing Configuration
# ============================================
# Automatically process links after search
AUTO_PROCESS_AFTER_SEARCH=true

# Maximum number of different domains to process concurrently
MAX_CONCURRENT_DOMAINS=3

# Delay between requests to the same domain (seconds)
SAME_DOMAIN_DELAY=3

# Maximum retries for failed requests
MAX_RETRIES=2

# Timeout for single URL processing (seconds)
PROCESSING_TIMEOUT=30

# Request timeout for API calls (seconds)
REQUEST_TIMEOUT=60

# ============================================
# Search Configuration
# ============================================
# Maximum links to return per search
MAX_LINKS_PER_SEARCH=20

# ============================================
# AI Processing Features
# ============================================
# Enable title cleaning
AI_ENABLE_CLEANING=true

# Enable translation
AI_ENABLE_TRANSLATION=true

# Skip translation if same language
AI_SKIP_SAME_LANGUAGE=true

# Batch size for processing
AI_BATCH_SIZE=10

# ============================================
# Content Extraction
# ============================================
# Enable content extraction (not just titles)
ENABLE_CONTENT_EXTRACTION=true

# Enable point-form summarization
ENABLE_POINT_FORM=true

# Maximum content length to extract (characters)
MAX_CONTENT_LENGTH=10000

# ============================================
# Jina Reader Configuration
# ============================================
# API key for https://r.jina.ai reader requests
JINA_API_KEY=your-jina-api-key-here
# Optional: override the dedicated reader host
JINA_READER_BASE_URL=https://r.jina.ai

# ============================================
# Healthcheck Configuration
# ============================================
# Set to true to perform live requests during /health
HEALTHCHECK_PING_AI=false
HEALTHCHECK_PING_JINA=false
